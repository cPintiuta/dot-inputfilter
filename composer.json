{
  "name": "dotkernel/dot-inputfilter",
  "description": "Adapts zend-inputfilter to DotKernel applications",
  "authors": [
    {
      "name": "Popa Tiberiu",
      "email": "tibi@apidemia.com"
    }
  ],
  "type": "library",
  "license": "MIT",
  "keywords": [
    "dotkernel",
    "input filter",
    "factories",
    "container",
    "zf2",
    "zf3",
    "service-manager"
  ],
  "require": {
    "php": "^7.1",
    "zendframework/zend-servicemanager": "^3.0",
    "zendframework/zend-inputfilter": "^2.7",

    "dotkernel/dot-filter": "0.6.x-dev",
    "dotkernel/dot-validator": "0.6.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.7",
    "squizlabs/php_codesniffer": "^2.5"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-filter"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-validator"
    }
  ],
  "autoload": {
    "psr-4": {
      "Dot\\InputFilter\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DotTest\\InputFilter\\": "tests"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.6-dev"
    }
  }
}
